<%- include('./theme/header2'); -%>
<head>
    <style>
        textarea:focus,input:focus{
            border: 3px solid forestgreen;
            border-color: forestgreen;
            scale: 1.04;
            outline: none;
        }

        input{
            margin-bottom: 10px;
            font-size: 15px;
        }
        textarea{
            font-size: 15px;
        }
        button:hover{
            opacity: 0.9;
        }
        button{
            margin-left: 0;
        }
        .form{
            width: 30%;
        }

        @media screen and (max-width: 900px){
            .form{
                width: 80%;
            }
        }
    </style>
</head>

<div style="height: 100%; width: 100%; display: flex; flex-direction:  column; justify-content: center; align-items: center;">
    <div style="height: 40px; width: 40px; background-color: #135683; position: absolute; left: 10px; top: 100px; color: white; font-size: 25px; border-radius: 100px; display: flex; justify-content: center;" onclick="window.location.href='/'">&larr;</div>
    <h1 style="margin-top: -20px; color: #135683;">Feedback</h1>
    <div class="form">
        <form action="/feedback" method="post">
            <input style="width: 100%; height: 50px; padding-left: 10px; border-radius: 5px;" type="text" name="name" placeholder="Your Name">
            <input style="width: 100%; height: 50px; padding-left: 10px; border-radius: 5px;" type="text" name="collage_name" placeholder="Collage Name">
            <textarea style="width: 100%; height: 50px; padding: 10px; border-radius: 5px; height: 350px;" type="text" name="feedback" placeholder="Write something"></textarea>
            <button style="background-color: #135683; color: white; border-radius: 5px; border: none; cursor: pointer; font-size: 18px;" type="submit">Submit</button>
        </form>
    </div>
</div>
<%- include('./theme/footer'); -%>