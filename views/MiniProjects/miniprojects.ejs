      function customConfirm(form) {
        document.getElementById('custom-confirm-box').style.display = 'block';

  // Set the form to be submitted
  window.formToSubmit = form;

  // Return false to prevent the form from submitting
  return false;
}

// Add event listener for the confirm button
document.getElementById('confirmButton').addEventListener('click', function() {
  // Hide the custom confirmation box
  document.getElementById('custom-confirm-box').style.display = 'none';

  // Submit the form
  window.formToSubmit.submit();
});

// Add event listener for the cancel button
document.getElementById('cancelButton').addEventListener('click', function() {
  // Hide the custom confirmation box
  document.getElementById('custom-confirm-box').style.display = 'none';
});
      

