.containernehal {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 100px 50px;
    padding: 100px 50px;
}

.containernehal .cardnehal {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: 350px;
    max-width: 100%;
    height: 300px;
    background: #FFF;
    border-radius: 20px;
    transition: 0.5s;
    box-shadow: 0 35px 80px rgba(0, 0, 0, 0.15);
}

.containernehal .cardnehal:hover {
    height: 400px;
}

.containernehal .cardnehal .img-boxnehal {
    position: absolute;
    top: 20px;
    width: 300px;
    height: 220px;
    background: #333;
    border-radius: 12px;
    overflow: hidden;
    transition: 0.5s;
}

.containernehal .cardnehal:hover .img-boxnehal {
    top: -100px;
    scale: 0.75;
    box-shadow: 0 15px 45px rgba(0, 0, 0, 0.2);
}

.containernehal .cardnehal .img-boxnehal img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.containernehal .cardnehal .contentnehal {
    position: absolute;
    top: 252px;
    width: 100%;
    height: 35px;
    padding: 0 30px;
    text-align: center;
    overflow: hidden;
    transition: 0.5s;
}

.containernehal .cardnehal:hover .contentnehal {
    top: 130px;
    height: 250px;
}

.containernehal .cardnehal .contentnehal h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--clr);
}

.containernehal .cardnehal .contentnehal p {
    color: #333;
}

.containernehal .cardnehal .contentnehal a {
    position: relative;
    top: 15px;
    display: inline-block;
    padding: 12px 25px;
    text-decoration: none;
    background: var(--clr);
    color: #FFF;
    font-weight: 500;
}

.containernehal .cardnehal .contentnehal a:hover {
    opacity: 0.8;
}

@media (max-width: 480px) {
    .containernehal .cardnehal {
        width: 230px;
        border-radius: 15px;
    }

    .containernehal .cardnehal .img-boxnehal {
        width: 185px;
        border-radius: 10px;
    }

    .containernehal .cardnehal .contentnehal p {
        font-size: 0.8rem;
    }

    .containernehal .cardnehal .contentnehal a {
        font-size: 0.9rem;
    }
}

