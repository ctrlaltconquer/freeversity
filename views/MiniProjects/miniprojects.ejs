    <script>
// SEARCH

let searchOption = 'title'; // Default search option

function changeSearchOption(option) {
    searchOption = option;
    document.getElementById("myInput").placeholder = "Search by " + (searchOption === 'title' ? 'title' : 'name');
}

function searchProjects() {
    // Declare variables
    var input, filter, container, cards, card, title, postedBy, i, txtValue;

    input = document.getElementById('myInput');
    filter = input.value.toUpperCase();
    container = document.getElementById('projectContainer');
    cards = container.getElementsByClassName('cardnehal');

    // Loop through all project cards, and hide those that don't match the search query
    for (i = 0; i < cards.length; i++) {
        card = cards[i];
        if (searchOption === 'title') {
            title = card.querySelector('h2');
            txtValue = title.textContent || title.innerText;
        } else {
            postedBy = card.querySelector('.posted-by');
            txtValue = postedBy.textContent || postedBy.innerText;
        }
        
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
            card.style.display = '';
        } else {
            card.style.display = 'none';
        }
    }
}



